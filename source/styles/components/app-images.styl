.mask
  position absolute
  z-index -100
  width 100%
  height 100%
  overflow hidden
  background-color black

.banner-img
  centralizer(true, true)
  my-opacity(0.2)


.img-circle
  & > img
    @extend .img-circle

.post-avatar
  img
    width 60px
    height 60px

.post-image
  position relative
  img
    display block
    width 100%
    height auto