.banner-carousel
  position absolute
  width 100% !important
  .carousel-inner
    position relative
    height 800px
    width 100%
    .banner-item
      position absolute
      width 100%
      height 100%

.banner-carousel
  .carousel-caption
    position relative
    margin-top 300px
    left 0
    right 0
    padding 0
    text-align left
    cols(6, 10, 8, 12)
    +media($screen-xs-max)
      text-align center
      p
        text-align center
    .md-title
      font-family $RWRegular
    .xl-title
      margin 0
      font-size 60px

.banner-carousel
  .carousel-indicators
    position absolute
    bottom 50px

.home-about
  margin-top 100px
  +media($screen-xs-max)
    margin-top 0


.services
  padding-bottom 100px

.services-list
  @extend .offers-list
  .services-desc
    cols(10, 10, 10, 10)
    & > p
      padding-left 30px
      +media($screen-sm-max)
        padding-left 0
    & > a
      margin-left 30px
      +media($screen-sm-max)
        margin-left 0
      +media($screen-xs-min)
        display block
    .boost
      position relative
      &::before
        content ''
        position absolute
        top -5px
        height 3px
        width 5%
        transition 1s ease
        background-color $blue-color
      &:hover
        &::before
          width 100%

.clients-feedback
  position relative
  .carousel-indicators
    margin-left 15px
    +media($screen-xs-max)
      margin-left 0

.feedback-item
  margin-top 30px
  padding 20px 0 20px 0
  cols(4, 4, 4, 12)
  +media($screen-xs-max)
    border-bottom 1px solid $light-grey

.client-info
  .user-avatar
    display block
    margin-top 20px
    +media($screen-xs-max)
      margin-top 0
  .client-name
    margin 30px 0 0 20px
    +media($screen-xs-max)
      margin 10px 0 0 20px


.current-post
.posts-list
  cols(6, 6, 6, 12)

.current-item
  cols(10, 10, 9, 12)

.current-info
  cols(2, 2, 3, 12)
  ul
    margin-top 20px
    text-align right
    +media($screen-xs-max)
      text-align left
    li
      padding 10px 0 10px 0
      border-bottom 1px solid $accent-color
      &:last-child
        padding 10px 0 0 0
        border-bottom none
      &:first-child
        padding 0 0 10px 0
      +media($screen-xs-max)
        display inline-block
        &:not(:first-child)
          margin-left 10px
        &:last-child
          padding 10px 0 10px 0
          border-bottom 1px solid $accent-color
    .xl-title
      font-family $OpenSansB
    p
      margin 0
      padding 0

.posts-list
  margin-top 20px
  ul
    cols(12, 12, 12, 12)
  li
    &:not(:last-child)
      margin-bottom 10px
      padding-bottom 10px
      border-bottom 1px solid $medium-grey

.partners
  padding-bottom 100px