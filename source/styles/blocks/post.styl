.admin-area
  display inline-block
  margin-top 50px
  make-container()
  .admin-comment
    cols(10, 9, 9, 12)
    position relative
    height 195px
    color $lighter-grey
    background-color $blue-color
    &::before
      content ''
      position absolute
      left -10px
      bottom 45%
      top 45%
      width 0
      height 0
      border-top 10px solid transparent
      border-bottom 10px solid transparent
      border-right 10px solid $blue-color
      +media($screen-sm-max)
        border-top 6px solid transparent
        border-bottom 6px solid transparent
        border-right 6px solid $blue-color
        left -6px
      +media($screen-xs-max)
        top -16px
        left 85.5px
        border-left 10px solid transparent
        border-right 10px solid transparent
        border-bottom 10px solid $blue-color
    +media($screen-xs-max)
      height auto
      margin-top 20px
      padding 20px
    p
      margin 0
      padding 20px 20px 0 20px
  .admin-avatar
    cols(2, 3, 3, 12)

.post-comments
  .page-name
    margin-top 0

.leave-comment
  margin-top 0
