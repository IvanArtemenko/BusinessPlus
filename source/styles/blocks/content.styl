.page-name
  margin 100px 0 30px 0

.post
  overflow hidden
  margin-bottom 50px
  padding-bottom 50px
  border-bottom 1px solid $light-grey

.post-author
  display block
  margin-top 10px
  font 13px $RWRegular

.post-avatar
  cols(1, 1, 1, 12)

.post-heading
  cols(11, 11, 11, 12)
  +media($screen-sm-max)
    padding-left 30px
  +media($screen-xs-max)
    margin-top 20px
    padding-left 15px

.post-inner
  @extend .pull-right
  cols(11, 11, 11, 12)

.post-image
.post-content
  margin-top 20px